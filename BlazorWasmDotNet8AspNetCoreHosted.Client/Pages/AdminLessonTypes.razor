        display: inline-block;
        padding: 2px 8px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 600;
        background: #eef2f7;
    }

    
    .lec {
        background: #e9f3ff;
    }

    .sem {
        background: #eafaf0;
    }

    .lab {
        background: #fff7df;
    }

    .prc {
        background: #efe5ff;
    }

    .brk {
        background: #f1f5f9;
    }

    .can {
        background: #ffe9e9;
        text-decoration: line-through;
    }

    .c7 {
        background: #E7F4FF;
    }

    .c8 {
        background: #E6FFF5;
    }

